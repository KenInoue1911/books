<body>
  <h1>Books</h1>
  <% @books.each do |book| %>
<table>
   <thead>
     <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
     </tr>
    </thead>
    <tbody>
     <span><%= book.title %></span>
     <span><%= book.body %></span>
    </tbody>
    
  </table>
  <p><a href="/books/">edit</a></p>

  
<% end %>
<h1>新規投稿</h1>
<%= form_with model:@book, local:true do |f| %>

  <h4>タイトル</h4>
  <%= f.text_field :title %>

  <h4>カテゴリー</h4>
  <%= f.text_field :category %>

  <h4>本文</h4>
  <%= f.text_area :body %>

  <%= f.submit '投稿' %>

 <% end %>