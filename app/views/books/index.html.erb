<% if flash[:notice1] %>
    <p id="notice1">
       <%= flash[:notice1] %>
     </p>
<% end %>
<body>
  <h2><span style="margin-left:30px">Books</span></h2>
  <table>
   <thead>
     <tr>
      <th><span style="margin-left:30px">Title</span></th>
      <th><span style="margin-left:30px">Body</span></th>
     </tr>
   </thead>
    <tbody>
     <% @books.each do |book| %>
     <tr>
      <td><span style="margin-left:30px"><%= book.title %></span></td>
      <td><span style="margin-left:30px"><%= book.body %></span></td>
      <td><span style="margin-left:30px"><%= link_to "Show", book_path(book) %></span></td>
      <td><span style="margin-left:10px"><%= link_to "Edit", edit_book_path(book) %></span></td>
      <td><span style="margin-left:10px"><%= link_to "Delete", book_path(book), method: :delete, data: {confirm: 'Are you sure?'} %></span></td>
     </tr>
     <% end %>
    </tbody>
  </table>

    <h2><span style="margin-left:30px">New books</span></h2>
    <span style="margin-left:30px"><%= form_with model:@book, local:true do |f| %></span>
    <% if @book.errors.any? %>
    <h3><span style="margin-left:30px"><%= @book.errors.count %> errors prohibited this book from being saved</span></h3> 
    <p><% @book.errors.full_messages.each do |message| %></p>
    <span style="margin-left:30px"><%= message %></span>
   <% end %>
  <% end %>

   <p><span style="margin-left:30px">Title</span></p>
   <span style="margin-left:30px"><%= f.text_field :title %></span>


  <p><span style="margin-left:30px">Body</span></p>
   <span style="margin-left:30px"><%= f.text_area :body %></span>

  <p><span style="margin-left:30px"><%= f.submit 'Create book' %></span></p>

 <% end %>